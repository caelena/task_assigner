{% extends 'base.html.twig' %}

{% block body %}
    <h1>Listado de tareas</h1>
    <table>
        <thead>
            <tr>
                <th>Title</th>
                <th>Code</th>
                <th>Task's ID</th>
                <th>Employee's ID</th>
                <th>Priority's ID</th>
                <th>Estimated time</th>
                <th>Details</th>
            </tr>
        </thead>
        <tbody>
        {% for task in tasks %}
            <tr>
                <td>{{ task.title }}</td>
                <td>{{ task.code }}</td>
                <td>{{ task.id }}</td>
                <td>{{ task.employee.firstName }}</td>
                <td>{{ task.priority.number }}</td>
                <td>{{ task.estimatedTime | date('d/m/y H:i') }}</td>
                <td>{{ task.details }}</td>
            </tr>
        {% else %}
            <tr><td>No se han encontrado datos</td></tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}